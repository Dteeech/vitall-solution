generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(uuid())
  email          String         @unique
  password       String
  firstName      String
  lastName       String
  role           UserRole       @default(USER)
  organizationId String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  leaveRequests  LeaveRequest[]
  shifts         Shift[]
  organization   Organization?  @relation(fields: [organizationId], references: [id])
}

model Organization {
  id           String        @id @default(uuid())
  name         String
  address      String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  candidatures Candidature[]
  plannings    Planning[]
  subscription Subscription?
  users        User[]
}

model Module {
  id                  String               @id @default(uuid())
  name                String               @unique
  category            String
  price               Float
  description         String?
  isBasePackModule    Boolean              @default(false)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  subscriptionModules SubscriptionModule[]
}

model Subscription {
  id                   String               @id @default(uuid())
  organizationId       String               @unique
  status               SubscriptionStatus   @default(PENDING)
  startDate            DateTime             @default(now())
  endDate              DateTime?
  monthlyPrice         Float                @default(0)
  stripeCustomerId     String?
  stripeSubscriptionId String?
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  organization         Organization         @relation(fields: [organizationId], references: [id])
  subscriptionModules  SubscriptionModule[]
}

model SubscriptionModule {
  id             String       @id @default(uuid())
  subscriptionId String
  moduleId       String
  assignedAt     DateTime     @default(now())
  module         Module       @relation(fields: [moduleId], references: [id])
  subscription   Subscription @relation(fields: [subscriptionId], references: [id])

  @@unique([subscriptionId, moduleId])
}

model Candidature {
  id             String            @id @default(uuid())
  firstName      String
  lastName       String
  email          String
  phone          String?
  cvUrl          String?
  status         CandidatureStatus @default(PENDING)
  organizationId String
  appliedAt      DateTime          @default(now())
  organization   Organization      @relation(fields: [organizationId], references: [id])
}

model Planning {
  id             String       @id @default(uuid())
  name           String
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  shifts         Shift[]
}

model Shift {
  id          String    @id @default(uuid())
  planningId  String
  userId      String?
  startTime   DateTime
  endTime     DateTime
  type        ShiftType
  isAvailable Boolean   @default(true)
  planning    Planning  @relation(fields: [planningId], references: [id])
  user        User?     @relation(fields: [userId], references: [id])
}

model LeaveRequest {
  id         String      @id @default(uuid())
  userId     String
  startDate  DateTime
  endDate    DateTime
  reason     String?
  status     LeaveStatus @default(PENDING)
  approvedBy String?
  user       User        @relation(fields: [userId], references: [id])
}

enum UserRole {
  ADMIN
  USER
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  PENDING
  CANCELLED
}

enum CandidatureStatus {
  PENDING
  INTERVIEW
  ACCEPTED
  REJECTED
}

enum ShiftType {
  GARDE
  ASTREINTE
  FORMATION
  REUNION
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}
